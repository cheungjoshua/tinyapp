<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls"> TinyApp </a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls"> My URLs </a>
        <a class="nav-item nav-link" href="/urls/new"> Create New URL </a>
      </div>
    </div>
    <% if (typeof username !== "undefined") { %>
    <p>Logged In As: <%= username %></p>
    <form class="form-inline float-right" action="/logout" method="POST">
      <button type="submit" class="btn btn-primary">Logout</button>
    </form>
    <% } else { %>
    <form class="form-inline float-right" action="/login" method="POST">
      <input type="text" name="username" placeholder="Name" />
      <button type="submit" class="btn btn-primary">Login</button>
    </form>
    <% } %>
  </nav>
</header>
